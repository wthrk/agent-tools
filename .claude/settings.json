{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c '\"$(git rev-parse --show-toplevel)/.claude/hooks/block-git.sh\"'"
          },
          {
            "type": "command",
            "command": "bash -c '\"$(git rev-parse --show-toplevel)/.claude/hooks/block-tail-head.sh\"'"
          }
        ]
      }
    ]
  }
}
